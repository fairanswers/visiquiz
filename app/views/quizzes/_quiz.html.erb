<% @editable ||= false #In case it's not set earlier %>
<% if @quiz.questions %>
  <% @quiz.questions.each{ |qs| %>
    <%= render('questions/question' , qs: qs ) %>
  <%}%>
<% end%>

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Add Question</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Question</h4>
      </div>
      <div class="modal-body">
        <p>
          <!--

            Explains form-with https://m.patrikonrails.com/rails-5-1s-form-with-vs-old-form-helpers-3a5f72a8c78a
            Explains remote forms https://m.patrikonrails.com/do-you-really-need-that-fancy-javascript-framework-e6f2531f8a38
            Explains bootstrap modal https://www.w3schools.com/bootstrap/bootstrap_modal.asp

          -->
          <% blank_question = Question.new(quiz: @quiz); %>
          <%= render 'questions/form', question: blank_question %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
